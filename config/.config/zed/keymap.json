// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "ctrl-t k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-t h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-t j": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-t l": ["workspace::ActivatePaneInDirection", "Right"]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      // "ctrl-t k": ["workspace::ActivatePaneInDirection", "Up"]
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      // "ctrl-t l": ["workspace::ActivatePaneInDirection", "Right"]
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "j j": "vim::NormalBefore",
      "ctrl-l": "editor::MoveRight"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "shift-h": "vim::FirstNonWhitespace",
      "shift-l": "vim::EndOfLine",
      "space f f": "file_finder::Toggle",
      "space f s": "workspace::NewSearch",
      "space e e": "workspace::ToggleLeftDock",
      "ctrl-h": "pane::ActivatePrevItem",
      "ctrl-l": "pane::ActivateNextItem"
    }
  }
]
