# インストール先を指定
cask_args appdir: "/Applications"

# 外部ライブラリ
tap "homebrew/bundle"
tap "homebrew/cask"
tap "homebrew/cask-fonts"
tap "homebrew/core"

# CLIアプリケーション
brew "git"
brew "jq"
brew "neovim", args: ["HEAD"]
brew "ripgrep"
brew "starship"
brew "tmux"

# デスクトップアプリケーション
cask "alfred"
cask "bitwarden"
cask "google-chrome"
cask "hot"
cask "stats"
cask "clipy"
cask "hammerspoon"
cask "the-unarchiver"
cask "notion"
cask "font-hack-nerd-font"
cask "alacritty"
cask "iterm2"
cask "warp"
cask "kitty"
cask "wezterm"
cask "visual-studio-code"
cask "chromedriver"
cask "firefox"
cask "figma"
cask "postman"
cask "vlc"
cask "kindle"
